package praktic.geometry.shapes2;

public class Rectangle {
    private final int id; // ID persegi panjang
    private final double panjang; //Panjangnya persegi panjang
    private final double lebar; //Lebarnya persegi panjang

    //Constructor dengan parameter untuk menginisialisasi atribut
    public Rectangle(int id, double panjang, double lebar) {
        this.id = id;
        this.panjang = panjang;
        this.lebar = lebar;
    }

    //Method untuk menghitung luas persegi panjang
    public double getLuas() {
        return panjang * lebar;
    }

    //Method untuk menghitung keliling persegi panjang
    public double getKeliling() {
        return 2 * (panjang + lebar);
    }

    //Method untuk mencetak deskripsi persegi panjang
    public void printDeskripsi() {
        System.out.println("====================================");
        System.out.println("ID       : " + id);
        System.out.println("Panjang  : " + panjang);
        System.out.println("Lebar    : " + lebar);
        System.out.println("Keliling : " + getKeliling());
        System.out.println("Luas     : " + getLuas());
        System.out.println("====================================");
    }
}
